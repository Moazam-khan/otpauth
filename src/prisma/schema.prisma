generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  otp          String?  // For email verification
  otpExpiresAt DateTime?
  Isverified   Boolean  @default(false)
  createdAt    DateTime @default(now())
}
